[colors]
background = #f90f0f0f
background-alt = #f93f3f3f
foreground = #d4be98
foreground-alt = #d4be98
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
;monitor = ${env:MONITOR:HDMI-2}
monitor = ${env:MONITOR}
width = 100%
height = 30
fixed-center = true
border-size= 0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

padding-left = 5
padding-right = 5

module-margin-left = 2
module-margin-right = 3

font-0 = San Fransisco Text:size=10;0
font-1 = FontAwesome:size=11;0
font-2 = Weather Icons:size=12;0

;tray-position = left
;tray-padding = 5
;tray-underline-size = 0
;tray-detached = true
;tray-transparent = false
;tray-background = ${colors.background}
;tray-foreground = ${colors.foreground-alt}

modules-left = powermenu bspwm i3
modules-center = spotify
modules-right = update weather date battery

;wm-restack = bspwm

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/date]
type = internal/date
interval = 5

date = %a, %b %d
time = %l:%M %p
label = %date%  %time%

background = ${colors.background-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = #ffb52a

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-foreground = ${colors.foreground-alt}
animation-discharging-framerate = 750

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 4

label-open = 
label-close = 
label-separator =
label-separator-foreground = ${colors.foreground-alt}
label-active-font = 1

menu-0-0 = " Restart"
menu-0-0-exec = sudo reboot
menu-0-1 = "     Shutdown"
menu-0-1-exec = sudo poweroff

[module/weather]
type = custom/script
exec = busctl --user -j get-property io.ntfd /weather openweathermap.strings RenderedTemplate | jq -r .data
interval = 60
label-font = 3

[module/update]
type = custom/script
exec = yay -Qu | wc -l
interval = 1000
label = %output%
format-prefix = " "

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5
